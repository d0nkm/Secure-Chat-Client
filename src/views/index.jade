    script(src='//static.catafratta.org/js/angular-aria.min.js')
    script(src='//static.catafratta.org/js/angular-messages.min.js')
    script(src='//static.catafratta.org/js/angular-material.min.js')
    script(src='//static.catafratta.org/js/kotlin-1.1.1.js')
    script(src='scrollglue.min.js')
    script(src='socket.io/socket.io.js')
    script(src='forge.min.js')
    script(src='nschat_main.js')