    title Secure Chat
  body.view-animate-container(ng-app='SecureChat' ng-cloak ng-controller="AppController")
    div(layout="row" layout-align="space-around" ng-show="sc.loading")
      div(layout="column" layout-align="center center")
        md-progress-circular(md-mode="indeterminate")
        p {{ sc.loadingMessage || "Loading&hellip;" }}
    .view-animate(ui-view flex layout="row" style="height: 100%;" ng-hide="sc.loading")
    script(src='//static.catafratta.org/js/jquery.min.js')
    script(src='//static.catafratta.org/js/angular.min.js')
    script(src='//static.catafratta.org/js/angular-animate.min.js')
